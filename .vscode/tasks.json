{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Flash",
            "type": "shell",
            "command": "cd \"${workspaceFolder}/2. ADC\" ; make all ; make flash",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}/2. ADC"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Build Example",
            "type": "shell",
            "command": "cd \"${workspaceFolder}/2. ADC\" && make example-win EXAMPLE=${input:exampleName}",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}/2. ADC"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Build and Flash Example",
            "type": "shell",
            "command": "cd \"${workspaceFolder}/2. ADC\" && make example-win EXAMPLE=${input:exampleName} && make flash",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}/2. ADC"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Build Only",
            "type": "shell",
            "command": "cd \"${workspaceFolder}/2. ADC\" && make all",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}/2. ADC"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Flash Only",
            "type": "shell",
            "command": "cd \"${workspaceFolder}/2. ADC\" && make flash",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cd \"${workspaceFolder}/2. ADC\" && make clean",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "DIO Build and Flash",
            "type": "shell",
            "command": "cd \"${workspaceFolder}/1. GPIO/DIO\" && make all && make flash",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}/1. GPIO/DIO"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ],
    "inputs": [
        {
            "id": "exampleName",
            "type": "promptString",
            "description": "Enter the example filename (without .c extension)",
            "default": "Group_Oneshot_Scan_HW"
        }
    ]
}
